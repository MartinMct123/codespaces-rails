<div class="index">
  <p style="color: green"><%= notice %></p>

  <h1>Tasks</h1>

  <div id="tasks">
    <% @tasks.each do |task| %>
      <div class="content">
        <%= render task %>
        <p>
          <%= link_to "Show this task", task %>
        </p>
      </div>
      
    <% end %>
  </div>

  <%= link_to "New task", new_task_path %>
</div>

